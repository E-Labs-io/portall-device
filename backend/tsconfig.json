{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}
